<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/titlebar_layout"
    android:background="@drawable/title_layout_white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_height"
        android:id="@+id/titlebar_title"
        android:layout_toLeftOf="@id/imgCamera"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/view_margin_start"
        android:ellipsize="end"
        android:textColor="@color/fontBlack"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textSize="17sp"
        tools:text="0123456789012345678901234567890123456789012345678901234567890123456789"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgSearch"
        android:src="@drawable/search"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/view_margin_end"
        android:background="@drawable/ripple_overflow"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgCamera"
        android:src="@drawable/camera"
        android:layout_toLeftOf="@id/imgSearch"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/view_margin_start"
        android:layout_marginEnd="@dimen/view_margin_end"
        android:background="@drawable/ripple_overflow"
        />
</RelativeLayout>